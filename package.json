{
	"name": "react-mark",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"build:react-mark": "turbo run build --filter=@repo/react-mark",
		"dev:web": "turbo run dev --filter=web",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"devDependencies": {
		"prettier": "^3.2.5",
		"turbo": "^2.2.3",
		"typescript": "5.5.4"
	},
	"packageManager": "pnpm@8.15.6",
	"engines": {
		"node": ">=18"
	}
}